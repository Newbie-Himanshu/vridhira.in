
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole(userId) {
      return exists(/databases/$(database)/documents/customers/$(userId)) 
        ? get(/databases/$(database)/documents/customers/$(userId)).data.role 
        : 'user';
    }

    function isAdmin() {
      return isSignedIn() && (getRole(request.auth.uid) == 'store admin' || getRole(request.auth.uid) == 'owner');
    }

    function isPlatformOwner() {
      return isSignedIn() && getRole(request.auth.uid) == 'owner';
    }

    function isSpecialAdmin() {
      return isSignedIn() && request.auth.token.email == 'hk8913114@gmail.com';
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin() || isSpecialAdmin();
      allow list: if isAdmin() || isSpecialAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isSpecialAdmin();
    }

    match /customers/{userId} {
      allow get: if isOwner(userId) || isAdmin() || isSpecialAdmin();
      allow list: if isAdmin() || isSpecialAdmin();
      allow create: if isOwner(userId) && (request.resource.data.role == 'user' || isSpecialAdmin());
      allow update: if isPlatformOwner() || (isOwner(userId) && (request.resource.data.role == resource.data.role || isSpecialAdmin())) || isSpecialAdmin();
    }

    match /user_preferences/{userId} {
      allow read, write: if isOwner(userId) || isSpecialAdmin();
    }

    match /page_customizations/{document} {
      allow read: if true;
      allow write: if isAdmin() || isSpecialAdmin();
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin() || isSpecialAdmin();
    }

    match /orders/{orderId} {
      allow get: if isSignedIn() && (request.auth.uid == resource.data.userId || isAdmin() || isSpecialAdmin());
      allow list: if isAdmin() || isSpecialAdmin();
      allow write: if isAdmin() || isSpecialAdmin();
    }

    match /carts/{userId} {
      allow read, write: if isOwner(userId) || isSpecialAdmin();
    }

    match /platform_settings/{document} {
      allow read: if true;
      allow write: if isPlatformOwner() || isSpecialAdmin();
    }

    match /categories/{document} {
      allow read: if true;
      allow write: if isAdmin() || isSpecialAdmin();
    }
  }
}
