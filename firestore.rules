
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/customers/$(request.auth.uid)).data.role;
    }

    function isOwner() {
      return isSignedIn() && getUserRole() == 'owner';
    }

    function isAdmin() {
      return isSignedIn() && (getUserRole() == 'store admin' || getUserRole() == 'owner');
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /customers/{customerId} {
      // Users can see their own profile, admins/owners can see all
      allow read: if isUser(customerId) || isAdmin();
      
      // Users can create their own profile as 'user'
      // Owner can update anyone's role.
      // Store admin cannot update roles.
      allow create: if isUser(customerId) && request.resource.data.role == 'user';
      allow update: if isOwner() || (isUser(customerId) && request.resource.data.role == resource.data.role);
      allow delete: if isOwner();
    }

    match /customers/{customerId}/orders/{orderId} {
      allow read: if isUser(customerId) || isAdmin();
      allow create: if isUser(customerId);
      allow update: if isAdmin(); // Admins update status
      allow delete: if isOwner();

      match /order_items/{orderItemId} {
        allow read: if isUser(customerId) || isAdmin();
        allow create: if isUser(customerId);
        allow update, delete: if isAdmin();
      }
    }

    match /page_customizations/{pageCustomizationId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
