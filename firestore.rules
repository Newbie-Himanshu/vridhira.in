
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSpecialAdmin() {
      // Robust check for the developer/owner account
      // email_verified might be false, so we check both email and known internal UID
      return isSignedIn() && (
        request.auth.token.email == 'hk8913114@gmail.com' ||
        request.auth.uid == 'my0UCiI0eCTUCVNSIHx9STUFOt62'
      );
    }

    function getRole() {
      let path = /databases/$(database)/documents/customers/$(request.auth.uid);
      return exists(path) ? get(path).data.role : 'user';
    }

    function isAdmin() {
      return isSignedIn() && (isSpecialAdmin() || getRole() == 'store admin' || getRole() == 'owner');
    }

    function isPlatformOwner() {
      return isSignedIn() && (isSpecialAdmin() || getRole() == 'owner');
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isSpecialAdmin();
    }

    match /customers/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId) && (request.resource.data.role == 'user' || isSpecialAdmin());
      allow update: if isPlatformOwner() || (isOwner(userId) && (request.resource.data.role == resource.data.role || isSpecialAdmin()));
    }

    match /user_preferences/{userId} {
      allow read, write: if isOwner(userId) || isSpecialAdmin();
    }

    match /page_customizations/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /orders/{orderId} {
      allow get: if isSignedIn() && (request.auth.uid == resource.data.userId || isAdmin());
      allow list: if isAdmin();
      allow write: if isAdmin();
    }

    match /carts/{userId} {
      allow read, write: if isOwner(userId) || isSpecialAdmin();
    }

    match /platform_settings/{document} {
      allow read: if true;
      allow write: if isPlatformOwner();
    }

    match /categories/{document} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
