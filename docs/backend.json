
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user account in the Vridhira Marketplace.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "Display name of the user."
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile photo, if available.",
          "format": "uri"
        },
        "phoneNumber": {
          "type": "string",
          "description": "Phone number of the user."
        },
        "creationTime": {
          "type": "string",
          "description": "Timestamp of when the user account was created.",
          "format": "date-time"
        },
        "lastSignInTime": {
          "type": "string",
          "description": "Timestamp of the user's last sign-in.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email"
      ]
    },
    "Cart": {
      "title": "Cart",
      "type": "object",
      "description": "Represents a user's active shopping cart.",
      "properties": {
        "userId": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "variantId": { "type": "string" },
              "quantity": { "type": "number" },
              "addedAt": { "type": "string", "format": "date-time" }
            }
          }
        },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "PageCustomization": {
      "title": "PageCustomization",
      "type": "object",
      "properties": {
        "template": { "type": "string", "enum": ["v0", "modern"] },
        "showBreadcrumbs": { "type": "boolean" },
        "showRelatedProducts": { "type": "boolean" },
        "enableZoom": { "type": "boolean" },
        "accentColor": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "Stores user profile information."
    },
    "/customers/{userId}": {
      "schema": { "type": "object" },
      "description": "Stores extended user profile and role info."
    },
    "/page_customizations/{settingsId}": {
      "schema": { "$ref": "#/backend/entities/PageCustomization" },
      "description": "Global store appearance and branding settings."
    },
    "/products/{productId}": {
      "schema": { "type": "object" },
      "description": "Public product catalog."
    },
    "/carts/{userId}": {
      "schema": { "$ref": "#/backend/entities/Cart" },
      "description": "User shopping carts."
    }
  }
}
