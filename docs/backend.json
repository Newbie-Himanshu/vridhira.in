
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user account in the Vridhira Marketplace.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "Display name of the user."
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile photo, if available.",
          "format": "uri"
        },
        "phoneNumber": {
          "type": "string",
          "description": "Phone number of the user."
        },
        "creationTime": {
          "type": "string",
          "description": "Timestamp of when the user account was created.",
          "format": "date-time"
        },
        "lastSignInTime": {
          "type": "string",
          "description": "Timestamp of the user's last sign-in.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email"
      ]
    },
    "Customer": {
      "title": "Customer",
      "type": "object",
      "description": "Represents a marketplace customer with roles and verification status.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "username": { "type": "string", "description": "Unique @username for the user" },
        "bio": { "type": "string", "description": "Short biography" },
        "address": { "type": "string", "description": "Physical shipping address" },
        "phoneNumber": { "type": "string" },
        "phoneNumberVerified": { "type": "boolean" },
        "role": { "type": "string", "enum": ["user", "store admin", "owner"] },
        "isVerified": { "type": "boolean" },
        "failedAttempts": { "type": "number", "description": "Count of failed OTP attempts" },
        "banUntil": { "type": "string", "format": "date-time", "description": "Timestamp when the user can try again" }
      },
      "required": ["id", "email", "role"]
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "sku": { "type": "string" },
        "brand": { "type": "string" },
        "title": { "type": "string" },
        "price": { "type": "number", "description": "Original or MSRP price" },
        "salePrice": { "type": "number", "description": "Discounted selling price" },
        "discountPercentage": { "type": "number", "description": "Calculated or manual discount percent" },
        "stock": { "type": "number" },
        "category": { "type": "string" },
        "description": { "type": "string" },
        "imageUrl": { "type": "string" },
        "type": { "type": "string", "enum": ["single", "variable", "group"] },
        "tags": { "type": "array", "items": { "type": "string" } },
        "specs": { "type": "object", "additionalProperties": { "type": "string" } },
        "variants": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "price": { "type": "number" },
              "salePrice": { "type": "number" },
              "stock": { "type": "number" }
            }
          }
        }
      }
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "customerName": { "type": "string" },
        "totalAmount": { "type": "number" },
        "status": { "type": "string", "enum": ["Pending", "Shipped", "Delivered", "Cancelled"] },
        "date": { "type": "string", "format": "date-time" },
        "platformFee": { "type": "number" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "quantity": { "type": "number" },
              "price": { "type": "number" }
            }
          }
        }
      }
    },
    "UserPreferences": {
      "title": "UserPreferences",
      "type": "object",
      "description": "User-specific settings and customization options.",
      "properties": {
        "theme": { "type": "string", "enum": ["light", "dark", "sepia"] },
        "currency": { "type": "string", "enum": ["USD", "INR"] },
        "emailNotifications": { "type": "boolean" },
        "smsNotifications": { "type": "boolean" }
      }
    },
    "Cart": {
      "title": "Cart",
      "type": "object",
      "description": "Represents a user's active shopping cart.",
      "properties": {
        "userId": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "variantId": { "type": "string" },
              "quantity": { "type": "number" },
              "addedAt": { "type": "string", "format": "date-time" }
            }
          }
        },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "PageCustomization": {
      "title": "PageCustomization",
      "type": "object",
      "properties": {
        "template": { "type": "string", "enum": ["v0", "modern"] },
        "showBreadcrumbs": { "type": "boolean" },
        "showRelatedProducts": { "type": "boolean" },
        "enableZoom": { "type": "boolean" },
        "accentColor": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "Stores user profile information."
    },
    "/customers/{userId}": {
      "schema": { "$ref": "#/backend/entities/Customer" },
      "description": "Stores extended user profile, role info, and verification status."
    },
    "/user_preferences/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserPreferences" },
      "description": "Stores individual user application preferences."
    },
    "/page_customizations/{settingsId}": {
      "schema": { "$ref": "#/backend/entities/PageCustomization" },
      "description": "Global store appearance and branding settings."
    },
    "/products/{productId}": {
      "schema": { "$ref": "#/backend/entities/Product" },
      "description": "Public product catalog."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/backend/entities/Order" },
      "description": "Customer order records."
    },
    "/carts/{userId}": {
      "schema": { "$ref": "#/backend/entities/Cart" },
      "description": "User shopping carts."
    }
  }
}
